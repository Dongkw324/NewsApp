<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/searching_keyWord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/search_background"
        android:layout_margin="15dp"
        android:drawableStart="@drawable/search_key_word"
        android:padding="10dp"
        android:hint="@string/key_word" />
    
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/search_article_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/searching_keyWord"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="20dp"
        android:clipToPadding="true"
        app:layout_editor_absoluteX="0dp"
        android:paddingBottom="15dp" />
    
</androidx.constraintlayout.widget.ConstraintLayout>